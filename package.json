{
    "name": "react-boilerplate",
    "private": true,
    "version": "0.2.1",
    "description": "Enterprise-ready React boilerplate with TypeScript, Vite and modern tooling for 2026",
    "author": "Sina Khodabandehloo <khodabandehloo.sina@gmail.com>",
    "homepage": "https://github.com/Sinakhx/react-boilerplate#readme",
    "bugs": {
        "url": "https://github.com/Sinakhx/react-boilerplate/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Sinakhx/react-boilerplate.git"
    },
    "license": "MIT",
    "type": "module",
    "keywords": [
        "react",
        "boilerplate",
        "typescript",
        "vite",
        "scss",
        "2026",
        "modern"
    ],
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "serve": "vite preview --port 3000",
        "build:staging": "env-cmd -f .env.staging npm run build",
        "build:develop": "env-cmd -f .env.develop npm run build",
        "build:production": "env-cmd -f .env.production npm run build",
        "test": "vitest run",
        "test:watch": "vitest watch",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint . --fix",
        "lint:styles": "stylelint --allow-empty-input \"**/*.scss\"",
        "lint:fix-styles": "stylelint --allow-empty-input \"**/*.scss\" --fix",
        "lint-staged": "lint-staged",
        "prettify": "prettier --write \"**/*.{ts,tsx,scss,css,md,json}\"",
        "typecheck": "tsc --noEmit --incremental",
        "typecheck:watch": "tsc --noEmit --incremental --watch",
        "check:circular-dependencies": "dpdm --exit-code circular:1 --no-warning --no-tree ./src/**/index.{ts,tsx}",
        "prepare": "husky install",
        "docker:img": "docker build -t sample:react-app .",
        "docker:dev": "docker-compose -f docker-compose.dev.yml up",
        "docker:prod": "docker-compose -f docker-compose.prod.yml up",
        "push": "git push --follow-tags",
        "release": "standard-version",
        "release:first": "npm run release -- --first-release && npm run push",
        "release:major": "npm run release -- --release-as major && npm run push",
        "release:minor": "npm run release -- --release-as minor && npm run push",
        "release:notag": "npm run release -- --no-git-tag-version && npm run push",
        "release:patch": "npm run release -- --release-as patch && npm run push",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "knip": "knip"
    },
    "dependencies": {
        "@hookform/resolvers": "^5.2.2",
        "@tanstack/react-query": "^5.90.12",
        "@tanstack/react-query-devtools": "^5.91.1",
        "axios": "^1.13.2",
        "clsx": "^2.1.1",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "react-error-boundary": "^6.0.0",
        "react-hook-form": "^7.69.0",
        "react-router-dom": "^7.11.0",
        "sonner": "^2.0.7",
        "zod": "^4.2.1",
        "zustand": "^5.0.9"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.2.0",
        "@commitlint/config-conventional": "^20.2.0",
        "@storybook/react-vite": "^8.5.0",
        "@storybook/test": "^8.5.0",
        "@tailwindcss/postcss": "^4.1.18",
        "@tailwindcss/vite": "^4.1.18",
        "@testing-library/dom": "^10.4.1",
        "@testing-library/react": "^16.3.1",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^25.0.3",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@typescript-eslint/eslint-plugin": "^8.50.0",
        "@typescript-eslint/parser": "^8.50.0",
        "@vitejs/plugin-react": "^5.1.2",
        "autoprefixer": "^10.4.23",
        "cssnano": "^7.1.2",
        "dpdm": "^3.14.0",
        "env-cmd": "^11.0.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "husky": "^9.1.7",
        "jsdom": "^27.3.0",
        "knip": "^5.76.0",
        "lint-staged": "^16.2.7",
        "postcss": "^8.5.6",
        "postcss-import": "^16.1.1",
        "postcss-preset-env": "^10.5.0",
        "prettier": "^3.7.4",
        "prettier-plugin-organize-imports": "^4.3.0",
        "sass": "^1.97.1",
        "standard-version": "^9.5.0",
        "storybook": "^8.5.0",
        "stylelint": "^16.26.1",
        "stylelint-config-standard": "^39.0.1",
        "tailwindcss": "^4.1.18",
        "typescript": "^5.9.3",
        "vite": "^6.4.1",
        "vite-plugin-svgr": "^4.5.0",
        "vitest": "^4.0.16"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    }
}
