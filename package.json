{
    "name": "react-boilerplate",
    "private": true,
    "version": "0.0.1",
    "description": "Enterprise-ready React boilerplate with TypeScript, Vite and Scss",
    "author": "Sina Khodabandehloo <khodabandehloo.sina@gmail.com>",
    "homepage": "https://github.com/Sinakhx/react-boilerplate#readme",
    "bugs": {
        "url": "https://github.com/Sinakhx/react-boilerplate/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Sinakhx/react-boilerplate.git"
    },
    "license": "MIT",
    "keywords": [
        "react",
        "boilerplate",
        "typescript",
        "vite",
        "scss"
    ],
    "scripts": {
        "init:husky": "npx husky-init && husky install && husky set .husky/pre-commit 'npm run typecheck'",
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "preview:latest": "npm run build && npm run preview",
        "test": "vitest run",
        "test:watch": "vitest watch",
        "test:coverage": "vitest run --coverage",
        "lint": "npm run lint:ts && npm run lint:styles",
        "lint:ts": "eslint \"**/*.{ts,tsx}\"",
        "lint:styles": "stylelint --allow-empty-input \"**/*.scss\"",
        "lint:fix": "npm run lint:fix-ts && npm run lint:fix-styles",
        "lint:fix-ts": "eslint \"**/*.{ts,tsx}\" --fix",
        "lint:fix-styles": "stylelint --allow-empty-input \"**/*.scss\" --fix",
        "lint-staged": "lint-staged",
        "prettier": "prettier --write \"**/*.{ts,tsx,scss}\"",
        "typecheck": "tsc --noEmit",
        "docker:img": "docker build -t sample:react-app",
        "docker:dev": "docker-compose -f docker-compose.dev.yml up",
        "docker:prod": "docker-compose -f docker-compose.prod.yml up",
        "push": "git push --follow-tags",
        "release": "standard-version",
        "release:first": "npm run release -- --first-release && npm run push",
        "release:major": "npm run release -- --release-as major && npm run push",
        "release:minor": "npm run release -- --release-as minor && npm run push",
        "release:notag": "npm run release -- --no-git-tag-version && npm run push",
        "release:patch": "npm run release -- --release-as patch && npm run push"
    },
    "dependencies": {
        "axios": "^1.13.2",
        "clsx": "^2.1.1",
        "react": "^19.0.4",
        "react-dom": "^19.0.4",
        "@tanstack/react-query": "^5.90.12",
        "react-router-dom": "^7.11.0"
    },
    "devDependencies": {
        "@babel/core": "^7.28.5",
        "@commitlint/cli": "^20.2.0",
        "@commitlint/config-conventional": "^20.2.0",
        "@testing-library/react": "16.3.1",
        "@types/node": "^25.0.3",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.0.4",
        "@typescript-eslint/eslint-plugin": "^8.50.0",
        "@typescript-eslint/parser": "^8.50.0",
        "@vitejs/plugin-react": "^5.1.2",
        "autoprefixer": "^10.4.23",
        "babel-loader": "^10.0.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "husky": "^9.1.7",
        "jsdom": "^27.3.0",
        "lint-staged": "^16.2.7",
        "postcss": "^8.5.6",
        "prettier": "^3.7.4",
        "sass": "^1.97.1",
        "standard-version": "^9.5.0",
        "stylelint": "^16.26.1",
        "stylelint-config-standard": "^39.0.1",
        "typescript": "^5.9.3",
        "vite": "^7.3.0",
        "vitest": "^4.0.16"
    }
}
